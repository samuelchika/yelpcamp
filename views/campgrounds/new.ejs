<% layout('layouts/boilerplate'); %>
    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds" method="post" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="title">Title: &emsp;</label>
                    <input class="form-control" type="text" placeholder="title" name="campground[title]" id="title" required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location &emsp;</label>
                    <input class="form-control" type="text" placeholder="Location" name="campground[location]" id="location" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image URI &emsp;</label>
                    <input class="form-control" type="text" placeholder="ImageURI" name="campground[image]" id="image" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Price &emsp;</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="price">$</span>
                        <input type="text" class="form-control" placeholder="0.00" aria-label="price" aria-describedby="price" name="campground[price]" required>
                      </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description &emsp;</label>
                    <textarea placeholder="Camp Description" name="campground[description]" id="description" " class="form-control" required></textarea>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div>                
                <button type="submit" class="btn btn-primary">Create campground</button>
            </form>
        </div>
    </div>
    
    <a href="/campgrounds">All campgrounds</a>

