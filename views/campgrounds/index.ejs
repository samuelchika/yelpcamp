<% layout('layouts/boilerplate'); %>
<div id="map" style="width: 100%; height: 300px;"></div>
    <h1 class="text-center my-3">All campgrounds</h1>
    <% for (campground of campgrounds) { %> 
       <div class="card mb-3">
           <div class="row">
               <div class="col-md-4">
                    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner">
                                <% campground.images.forEach((image, i) => { %>
                                    <div class="carousel-item <%= (i == 0) ? 'active' : '' %>">
                                        <img class="d-block w-100 img-fluid" src="<%= image.url %>" alt="<%= image.filename %>">
                                    </div>
                                <% }); %>
                            </div>
                          </div>
                   <!-- <img src="<%= campground.image %>" alt="<%= campground.title %>" class="img-fluid"> -->
               </div>
               <div class="col-md-8">
                   <div class="card-body">
                       <h5 class="card-title">
                        <%= campground.title %>
                       </h5>
                       <p class="card-text fs-6 fw-lighter">
                        <%= campground.description %>
                       </p>
                       <p class="card-text">
                           <small class="text-muted"><%= campground.location %></small>
                       </p>
                       <a href="/campgrounds/<%= campground._id %> "" class="btn btn-primary">View <%= campground.title %></a>
                   </div>
               </div>
           </div>
       </div>  
    <% } %>
    
